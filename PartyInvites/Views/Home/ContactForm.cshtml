@model PartyInvites.Models.ContactResponse
@{
    ViewBag.Title = "ContactForm";
}




    <div class="container mt-5 col-4 col-md-offset-4">
        <h2>Contact Form</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(x => x.FullName, new { @class= "form-label"}): @Html.TextBoxFor(x => x.FullName, new { @class="form-control"})
                <span class="text-danger">@Html.ValidationMessageFor(x => x.FullName)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Message):  @Html.TextAreaFor(x => x.Message, new { @class="form-control"})
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Message)</span>
            </div>

            <div class="form-group">
                <label>Country</label>
                @Html.DropDownList("SomeOptions", new SelectListItem[]{
                    new SelectListItem(){Text="Switzerland", Value="CH"},
                    new SelectListItem(){Text="Germany", Value="DE"}
                   }, "", new { @class="form-control"})
            </div>
            <input type="submit" class="btn btn-secondary" value="Submit" />
        }
    </div>


